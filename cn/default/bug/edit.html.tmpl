        <th align="center" bgcolor="#cccccc">
          <label for="work_time">作业时间</label>
        </th>
        <th align="center" bgcolor="#cccccc">
          <label for="remaining_time">剩余时间</label>
        </th>
        <th align="center" bgcolor="#cccccc">
          完成百分比
        </th>
        <th align="center" bgcolor="#cccccc">
          收获
        </th>
        <th align="center" bgcolor="#cccccc">
          <label for="deadline">最后期限</label>
        </th>
      </tr>
